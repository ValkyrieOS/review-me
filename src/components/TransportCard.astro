---
import { Image } from "astro:assets";

interface Props {
  name: string;
  description: string;
  rating: number;
  imageSrc: ImageMetadata | null;
  totalReviews?: number;
  transporteId?: string;
  lines?: {
    id: string;
    name: string;
    route?: string;
    rating: number;
    totalReviews?: number;
    imageData?: ImageMetadata | null;
  }[];
}

const {
  name,
  description,
  rating,
  imageSrc,
  totalReviews = 0,
  transporteId,
  lines,
} = Astro.props;

// Generate stars based on rating (0-5)
const fullStars = Math.floor(rating);
const hasHalfStar = rating % 1 >= 0.5;
const emptyStars = 5 - fullStars - (hasHalfStar ? 1 : 0);

// Unique ID for this card's expandable section
const uniqueId = `lines-${transporteId}-${Math.random().toString(36).substring(7)}`;

// Check if there are any reviews
const hasReviews = totalReviews > 0;
---

<div
  class="group p-6 border border-neutral-800 rounded-xl bg-neutral-900/50 hover:bg-neutral-800/30 hover:border-neutral-700 transition-all duration-300"
>
  <div class="flex gap-5">
    <!-- Image container -->
    <div
      class="shrink-0 w-20 h-20 rounded-lg overflow-hidden bg-neutral-800 flex items-center justify-center"
    >
      {
        imageSrc && (
          <Image
            src={imageSrc}
            alt={`Logo de ${name}`}
            class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
            width={80}
            height={80}
          />
        )
      }
      {!imageSrc && <span class="text-neutral-500 text-2xl">ðŸš‡</span>}
    </div>

    <!-- Content -->
    <div class="flex-1 min-w-0">
      <h3
        class="text-lg font-semibold text-neutral-100 group-hover:text-white transition-colors"
      >
        {name}
      </h3>
      <p class="mt-1 text-sm text-neutral-400 leading-relaxed line-clamp-2">
        {description}
      </p>
    </div>
  </div>

  <!-- Lines toggle section -->
  {
    lines && lines.length > 0 && (
      <div class="mt-4 pt-4 border-t border-neutral-800/50">
        <button
          type="button"
          class="lines-toggle w-full flex items-center justify-between text-sm p-3 rounded-lg bg-neutral-800/40 hover:bg-neutral-700/50 transition-colors cursor-pointer"
          data-target={uniqueId}
          aria-expanded="false"
        >
          <span class="text-neutral-300 font-medium">
            {lines.length} {lines.length === 1 ? "lÃ­nea disponible" : "lÃ­neas disponibles"}
          </span>
          <svg
            class="toggle-icon w-5 h-5 text-neutral-400 transition-transform duration-300"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M19 9l-7 7-7-7"
            />
          </svg>
        </button>
        
        <div
          id={uniqueId}
          class="lines-content grid grid-cols-1 gap-2 mt-3 overflow-hidden transition-all duration-300"
          style="max-height: 0; opacity: 0;"
        >
          {lines.map((line) => (
            <a
              href={`${import.meta.env.BASE_URL}/linea/${transporteId}/${line.id}`}
              class="flex items-center justify-between text-sm p-2 rounded bg-neutral-800/30 hover:bg-neutral-700/50 transition-colors cursor-pointer"
            >
              <div class="flex items-center gap-3">
                {line.imageData ? (
                  <div class="w-8 h-8 flex items-center justify-center bg-white rounded p-0.5">
                    <Image
                      src={line.imageData}
                      alt={line.name}
                      class="w-full h-full object-contain"
                      width={32}
                      height={32}
                    />
                  </div>
                ) : (
                  <span class="font-bold text-neutral-200 bg-neutral-800 px-1.5 py-0.5 rounded text-xs border border-neutral-700">
                    {line.name}
                  </span>
                )}
                {line.route && (
                  <span class="text-neutral-400 text-xs truncate max-w-[150px] sm:max-w-none">
                    {line.route}
                  </span>
                )}
              </div>
              <div class="flex items-center gap-2">
                {line.totalReviews && line.totalReviews > 0 ? (
                  <div class="flex items-center gap-1.5">
                    <span class="text-neutral-300 font-medium text-xs">
                      {line.rating.toFixed(1)}
                    </span>
                    <svg
                      class="w-3 h-3 text-yellow-500"
                      fill="currentColor"
                      viewBox="0 0 20 20"
                    >
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                    </svg>
                  </div>
                ) : (
                  <span class="text-neutral-500 text-xs italic">Sin valoraciones</span>
                )}
                <svg
                  class="w-4 h-4 text-neutral-500"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 5l7 7-7 7"
                  />
                </svg>
              </div>
            </a>
          ))}
        </div>
      </div>
    )
  }

  <!-- Rating section -->
  <div
    class="mt-5 pt-4 border-t border-neutral-800 flex items-center justify-between"
  >
    {hasReviews ? (
      <>
        <div class="flex items-center gap-2">
          <!-- Stars -->
          <div
            class="flex gap-0.5"
            role="img"
            aria-label={`ValoraciÃ³n: ${rating} de 5 estrellas`}
          >
            {
              Array(fullStars)
                .fill(null)
                .map(() => (
                  <svg
                    class="w-4 h-4 text-neutral-100"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                  </svg>
                ))
            }
            {
              hasHalfStar && (
                <svg
                  class="w-4 h-4 text-neutral-100"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <defs>
                    <linearGradient id="halfGradient">
                      <stop offset="50%" stop-color="currentColor" />
                      <stop offset="50%" stop-color="transparent" />
                    </linearGradient>
                  </defs>
                  <path
                    fill="url(#halfGradient)"
                    stroke="currentColor"
                    stroke-width="0.5"
                    d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"
                  />
                </svg>
              )
            }
            {
              Array(emptyStars)
                .fill(null)
                .map(() => (
                  <svg
                    class="w-4 h-4 text-neutral-700"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                  </svg>
                ))
            }
          </div>

          <!-- Rating number -->
          <span class="text-sm font-medium text-neutral-300">
            {rating.toFixed(1)}
          </span>
        </div>

        <span class="text-xs text-neutral-500">
          {totalReviews} {totalReviews === 1 ? "valoraciÃ³n" : "valoraciones"}
        </span>
      </>
    ) : (
      <span class="text-sm text-neutral-500 italic">Sin valoraciones</span>
    )}
  </div>
</div>

<script>
  // Toggle lines visibility
  document.querySelectorAll('.lines-toggle').forEach((button) => {
    button.addEventListener('click', () => {
      const targetId = button.getAttribute('data-target');
      const content = document.getElementById(targetId!);
      const icon = button.querySelector('.toggle-icon');
      const isExpanded = button.getAttribute('aria-expanded') === 'true';
      
      if (content) {
        if (isExpanded) {
          content.style.maxHeight = '0';
          content.style.opacity = '0';
          button.setAttribute('aria-expanded', 'false');
          icon?.classList.remove('rotate-180');
        } else {
          content.style.maxHeight = content.scrollHeight + 'px';
          content.style.opacity = '1';
          button.setAttribute('aria-expanded', 'true');
          icon?.classList.add('rotate-180');
        }
      }
    });
  });
</script>
